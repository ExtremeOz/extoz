{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TenantConfig",
  "type": "object",
  "required": ["id", "name", "assets", "cssVars", "text"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]{2,40}$",
      "description": "Stable, lowercase key used in URLs and allowlists"
    },
    "name": { "type": "string", "minLength": 1 },
    "assets": {
      "type": "object",
      "required": ["logo", "favicon"],
      "properties": {
        "logo":   { "type": "string", "format": "uri-reference" },
        "favicon":{ "type": "string", "format": "uri-reference" },
        "hero":   { "type": "string", "format": "uri-reference" }
      },
      "additionalProperties": false
    },
    "cssVars": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-]+$": { "type": "string" }
      },
      "description": "CSS variables set on :root (e.g., --brand, --accent)"
    },
    "text": {
      "type": "object",
      "properties": {
        "title":  { "type": "object", "additionalProperties": { "type": "string" } },
        "tagline":{ "type": "object", "additionalProperties": { "type": "string" } },
        "cta":    { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },
    "features": {
      "type": "object",
      "properties": {
        "enablePhoneVerification": { "type": "boolean" },
        "enableEmailVerification": { "type": "boolean" },
        "showSupportChat": { "type": "boolean" }
      },
      "additionalProperties": { "type": "boolean" }
    },
    "policy": {
      "type": "object",
      "properties": {
        "allowedOrigins": { "type": "array", "items": { "type": "string" } },
        "supportEmail":   { "type": "string" },
        "privacyUrl":     { "type": "string" },
        "termsUrl":       { "type": "string" }
      },
      "additionalProperties": false
    },
    "endpoints": {
      "type": "object",
      "properties": {
        "verifyHttpFlow": { "type": "string", "format": "uri" },
        "auditDataverse": { "type": "string", "format": "uri" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}